<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:gravity="center|center_horizontal">


            <ImageView
                android:id="@+id/about_text"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/about_us_text" />

            <ImageView
                android:id="@+id/heartmia_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/about_text"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/hearthmia" />

            <ImageView
                android:id="@+id/about_person"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@id/heartmia_image"
                android:src="@drawable/about_person" />

            <TextView
                android:id="@+id/the_company_text"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/heartmia_image"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/about_person"
                android:fontFamily="@font/oswald"
                android:text="@string/the_company"
                android:textColor="#008ba3"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/hearthmia_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/about_person"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:text="@string/hearthmia_text"
                android:textColor="#008ba3"
                android:textSize="19sp"
                app:fontFamily="@font/oswald" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>